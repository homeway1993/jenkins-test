pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    userRemoteConfigs: [[url: 'https://github.com/homeway1993/simple-java-maven-app.git']],
                    branches: [[name: '*/master']],
                    extensions: [[$class: 'RelativeTargetDirectory', relativeTargetDir: 'checkout-directory']],
                    doGenerateSubmoduleConfigurations: false
                ])
                sh 'ls -al'
                sh 'echo $PWD'
            }
            post {
                always {
                    sh 'echo "Test post"'
                }
            }
        }
        // stage('Build') {
        //     steps {
        //         dir('checkout-directory') {
        //             sh 'ls -al'
        //             sh 'docker run --rm --name maven -v $HOME/.m2:/root/.m2 -v /usr/share/maven/conf/settings.xml:/usr/share/maven/conf/settings.xml:ro -v $PWD:/workdir -w /workdir maven:3-alpine mvn -B -DskipTests clean package'
        //             sh 'ls -al target/'
        //         }
        //     }
        // }
    }
}