pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    userRemoteConfigs: [[url: 'https://github.com/homeway1993/simple-java-maven-app.git']],
                    branches: [[name: '*/master']]
                ])
                sh 'ls -al'
                sh 'echo $HOME'
            }
            post {
                always {
                    sh 'echo "Test post"'
                    // sh 'docker rm -f httpd'
                }
            }
        }
        // stage('Build') {
        //     agent {
        //         docker {
        //             image 'maven:3-alpine'
        //             args '-v /root/maven/.m2:/root/.m2 -v /root/maven/conf:/usr/share/maven/conf'
        //         }
        //     }
        // }
    }
}