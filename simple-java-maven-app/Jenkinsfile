pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    userRemoteConfigs: [[url: 'https://github.com/homeway1993/simple-java-maven-app.git']],
                    branches: [[name: '*/master']],
                    extensions: [[$class: 'RelativeTargetDirectory', relativeTargetDir: 'checkout-directory']],
                    doGenerateSubmoduleConfigurations: false
                ])
                sh 'ls -al'
                sh 'echo $HOME'
            }
            post {
                always {
                    sh 'echo "Test post"'
                }
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'maven:3-alpine'
                    args '-v $HOME/docker-volume/maven/.m2:/root/.m2 -v $HOME/docker-volume/maven/conf:/usr/share/maven/conf'
                }
            }
            steps {
                dir('checkout-directory') {
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }
    }
}